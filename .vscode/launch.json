{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run: app",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.app:app",
                "--host", "0.0.0.0",
                "--port", "5000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Lint: flake8",
            "type": "debugpy",
            "request": "launch",
            "module": "flake8",
            "args": ["--count", "--max-line-length=79", "/hidden"],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Tests: unittest",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "args": [
                "run",
                "--source", "app",
                "-m", "unittest", "discover",
                "-s", "./tests",
                "-p", "*_tests.py",
                "-v"
            ],
            "cwd": "/hidden",
            "env": { "PYTHONWARNINGS": "ignore" },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Tests: coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "args": [
                "report",
                "--omit", "tests/*,*/__init__.py",
                "--show-missing",
                "--fail-under=60"
            ],
            "cwd": "/hidden",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
